<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="org.unimelb.itime.util.EventUtil" />

        <import type="org.unimelb.itime.util.TimeSlotUtil" />

        <import type="org.unimelb.itime.util.UserUtil" />
        <import type="org.unimelb.itime.util.CalendarUtil"/>

        <import type="android.view.View" />
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
        <variable
            name="contentVM"
            type="org.unimelb.itime.ui.viewmodel.EventDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_bg"
        android:orientation="vertical">


        <include
            android:id="@+id/event_detail_host_title_bar"
            layout="@layout/toolbar_common"
            bind:vm="@{toolbarVM}" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_detail_host_title_bar"
            android:background="@color/white"
            android:scrollbarStyle="insideOverlay">

            <!--background-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/event_detail_first_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_corner_gray">

                    <ImageView
                        android:id="@+id/host_photo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        app:url="@{EventUtil.getHostPhotoUrl(contentVM.event)}" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignRight="@id/host_photo"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/event_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{EventUtil.getHostName(contentVM.event)}"
                            android:textColor="@{contentVM.getMessageStatusColor(contentVM.event)}"
                            android:textStyle="bold"
                            android:visibility="@{EventUtil.isUserHostOfEvent(context, contentVM.event)? View.GONE: View.VISIBLE}" />

                        <TextView
                            android:id="@+id/event_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{EventUtil.getEventConfirmStatus(context, contentVM.event)}"
                            android:textColor="@{contentVM.getMessageStatusColor(contentVM.event)}" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/event_detail_host_first_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_detail_first_message"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="@dimen/padding_10"
                    android:layout_marginTop="13dp"
                    android:orientation="vertical">
                    <!-- ********************************************** -->

                    <LinearLayout
                        android:id="@+id/event_detail_basic_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/event_detail_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{contentVM.event.title}"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!--todo  change view-->
                        <LinearLayout
                            android:id="@+id/event_detail_confirm_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:visibility="@{contentVM.confirmTimeVisibility(contentVM.event)}">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_event_clock" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@{EventUtil.getSuggestTimeStringFromLong(context, contentVM.event.startTime, contentVM.event.endTime)}"
                                android:textSize="15sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/event_detail_repeat_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_event_repeated" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@{EventUtil.getRepeatString(context,contentVM.event)}"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/event_detail_location_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="@{contentVM.getLocationVisibility(contentVM.event)}"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_event_location" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@{contentVM.event.location}"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/event_detail_note_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="@{contentVM.getNoteVisibility(contentVM.event)}"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_event_note" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@{contentVM.event.description}"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_detail_host_second_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_detail_host_first_part"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="@dimen/padding_5"
                        android:layout_marginLeft="7dp"
                        android:gravity="bottom"
                        android:text="@{contentVM.event.invitee.size()>1 ? @string/select_one_or_more_timeslot : @string/select_one_timeslot}"
                        android:textColor="@color/gray_b2b2b2"
                        android:textSize="12sp"
                        android:visibility="@{contentVM.timeslotListVisibility(contentVM.event)}" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <org.unimelb.itime.widget.NonScrollListView
                            android:id="@+id/event_detail_timeslot_listview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="#00000000"
                            app:items="@{contentVM.wrapperTimeSlotList}"
                            app:itemView="@{contentVM.timeslotItemView}"
                            android:visibility="@{contentVM.timeslotListVisibility(contentVM.event)}" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:onClick="@{contentVM.onClickViewInCalendar()}"
                            android:text="@string/view_in_calendar"
                            android:textColor="@color/event_detail_repeat"
                            android:textSize="17dp" />
                    </LinearLayout>
                </LinearLayout>

                <!--ppp-->

                <!--eee-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_detail_host_second_part"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="@{contentVM.soloInvisible}">

                        <LinearLayout
                            android:id="@+id/invitees_status_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="2dp"
                            android:paddingTop="5dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/padding_5"
                            android:background="@color/gray_b2b2b2" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/invitees_status_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="5dp"/>
                        </HorizontalScrollView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/padding_5"
                            android:background="@color/gray_b2b2b2" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/event_detail_host_photo_RL"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:onClick="@{contentVM.gotoGridView}">

                        <TextView
                            android:id="@+id/event_detail_host_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/photo"
                            android:textColor="@color/color_000000"
                            android:textSize="17sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_toStartOf="@+id/event_detail_photo_arrow"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/detail_photo1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/padding_10" />

                            <ImageView
                                android:id="@+id/detail_photo2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/padding_10" />

                            <ImageView
                                android:id="@+id/detail_photo3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/event_detail_photo_arrow"
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/padding_10"
                            android:background="@drawable/icon_general_arrow_right" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/gray_b2b2b2" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:text="@string/url"
                            android:textColor="@color/color_000000"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/event_detail_host_url_link"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:autoLink="web"
                            android:gravity="center_vertical"
                            android:hint="@string/url"
                            android:onClick="@{contentVM.onClickUrl()}"
                            android:text="@{contentVM.event.url}"
                            android:textColor="@color/blue"
                            android:textColorHint="@color/gray_b2b2b2"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/event_detail_host_url_link"
                            android:layout_marginTop="@dimen/padding_5"
                            android:background="@color/gray_b2b2b2" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/calendar"
                            android:textColor="@color/color_000000"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/event_detail_calendar_arrow"
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/padding_10"
                            android:background="@drawable/icon_general_arrow_right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/padding_5"
                            android:layout_toLeftOf="@+id/event_detail_calendar_arrow"
                            android:text="@{CalendarUtil.getInstance(context).getCalendarName(contentVM.event)}" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/padding_5"
                            android:background="@color/gray_b2b2b2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:onClick="@{contentVM.toResponse()}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/Messages"
                            android:textColor="@color/color_333333"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/padding_5"
                            android:background="@color/gray_b2b2b2" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>


        <!--Host event accept show-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_f9f9f9"
            android:visibility="@{contentVM.hostConfirmVisibility}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_round_radius_able_blue"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/accepted"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="55dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="@{contentVM.onClickHostQuit(contentVM.event)}"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/quit"
                android:textAlignment="center"
                android:textColor="@color/color_F45B69"
                android:textSize="17sp" />

        </RelativeLayout>


