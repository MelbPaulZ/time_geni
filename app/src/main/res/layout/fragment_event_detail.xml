        <!--confirm-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_f9f9f9"
            android:clickable="true"
            android:visibility="@{contentVM.confirmVisibility(contentVM.event)}">

            <!--  left button-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_event_detail_btn_bg_left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textColor="@drawable/selector_event_detail_btn_text_left"
                android:textSize="17sp"
                android:text="@{contentVM.leftBtnText}"
                android:enabled="@{contentVM.getLeftBtnClickable(contentVM.wrapperTimeSlotList)}"
                android:selected="@{contentVM.isLeftBtnSelected}"
                android:onClick="@{contentVM.acceptEvent()}"
                />
            <!--right button-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_event_detail_btn_bg_right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textColor="@drawable/selector_event_detail_btn_text_right"
                android:textSize="17sp"
                android:text="@{contentVM.rightBtnText}"
                android:enabled="@{contentVM.getRightBtnClickable(contentVM.wrapperTimeSlotList)}"
                android:selected="@{contentVM.isRightBtnSelected}"
                android:onClick="@{contentVM.quitEvent()}"/>
        </RelativeLayout>

        <!--unconfirm-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_f9f9f9"
            android:clickable="true"
            android:visibility="@{contentVM.unconfirmVisibility(contentVM.event)}">

            <!--  left button-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_event_detail_btn_bg_left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textColor="@drawable/selector_event_detail_btn_text_left"
                android:textSize="17sp"
                android:text="@{contentVM.leftBtnText}"
                android:enabled="@{contentVM.getLeftBtnClickable(contentVM.wrapperTimeSlotList)}"
                android:selected="@{contentVM.isLeftBtnSelected}"
                android:onClick="@{contentVM.acceptEvent()}"
                />
            <!--right button-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_event_detail_btn_bg_right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textColor="@drawable/selector_event_detail_btn_text_right"
                android:textSize="17sp"
                android:text="@{contentVM.rightBtnText}"
                android:enabled="@{contentVM.getRightBtnClickable(contentVM.wrapperTimeSlotList)}"
                android:selected="@{contentVM.isRightBtnSelected}"
                android:onClick="@{contentVM.rejectAll()}"
                />
        </RelativeLayout>


        <!-- Host event Unconfirmed show-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_f9f9f9"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:visibility="@{contentVM.unconfirmHostVisibility(contentVM.event)}">

            <!--change from event to wrapperlist panduan-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:clickable="@{TimeSlotUtil.isAtLeastOneWrapperSelected(contentVM.wrapperTimeSlotList)? true: false}"
                android:gravity="center"
                android:onClick="@{contentVM.onClickHostConfirm()}"
                android:text="@string/confirm_event"
                android:textAlignment="center"
                android:textColor="@{TimeSlotUtil.isAtLeastOneWrapperSelected(contentVM.wrapperTimeSlotList)? @color/color_FE9E18 : @color/gray_b2b2b2}"
                android:textSize="17sp" />

        </LinearLayout>


    </RelativeLayout>
</layout>