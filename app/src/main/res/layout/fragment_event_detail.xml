                android:selected="@{hostDetailVM.isLeftBtnSelected}"
                android:onClick="@{hostDetailVM.acceptEvent()}"
                />
            <!--right button-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_event_detail_btn_bg_right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textColor="@drawable/selector_event_detail_btn_text_right"
                android:textSize="17sp"
                android:text="@{hostDetailVM.rightBtnText}"
                android:enabled="@{hostDetailVM.getRightBtnClickable(hostDetailVM.evDtlHostEvent)}"
                android:selected="@{hostDetailVM.isRightBtnSelected}"
                android:onClick="@{hostDetailVM.rejectAll()}"
                />
        </RelativeLayout>


        <!-- Host event Unconfirmed show-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_f9f9f9"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:visibility="@{hostDetailVM.unconfirmHostVisibility(hostDetailVM.evDtlHostEvent)}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="@{TimeSlotUtil.chooseAtLeastOnTimeSlot(context, hostDetailVM.evDtlHostEvent)? true: false}"
                android:gravity="center"
                android:onClick="@{hostDetailVM.onClickHostConfirm()}"
                android:text="@string/confirm_event"
                android:textAlignment="center"
                android:textColor="@{TimeSlotUtil.chooseAtLeastOnTimeSlot(context, hostDetailVM.evDtlHostEvent)? @color/color_FE9E18 : @color/gray_b2b2b2}"
                android:textSize="17sp" />

        </LinearLayout>


    </RelativeLayout>
</layout>