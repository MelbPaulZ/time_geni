<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="org.unimelb.itime.util.EventUtil"/>
        <import type="org.unimelb.itime.util.TimeSlotUtil"/>
        <import type="org.unimelb.itime.util.UserUtil"/>
        <import type="android.view.View"/>
        <variable
            name="hostDetailVM"
            type="org.unimelb.itime.ui.viewmodel.EventDetailViewModel"/>
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/event_detail_host_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <Button
                android:id="@+id/event_detail_host_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@null"
                android:onClick="@{hostDetailVM.onClickBack()}"
                android:textColor="@color/page_title_color"
                android:gravity="center_vertical|left"
                android:text="@string/back" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="@string/event_details" />

            <Button
                android:id="@+id/event_detail_host_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@null"
                android:visibility="@{hostDetailVM.evDtlHostEvent.hostUserUid.equals(UserUtil.getUserUid())? View.VISIBLE : View.INVISIBLE}"
                android:onClick="@{hostDetailVM.onClickEdit()}"
                android:textColor="@color/page_title_color"
                android:text="@string/edit" />
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_detail_host_title_bar"
        android:background="@color/white"
        android:scrollbarStyle="insideOverlay">

        <!--background-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/event_detail_host_first_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginTop="23dp"
                android:orientation="vertical">
                <!-- ********************************************** -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_gray"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/host_photo"
                        android:src="@drawable/invitee_selected_default_picture"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        />
                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_alignRight="@id/host_photo"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/event_name"
                            android:textStyle="bold"
                            android:textColor="@color/color_FF9600"
                            android:text="has not confirmed this event"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/event_status"
                            android:textColor="@color/color_FF9600"
                            android:text="has not confirmed this event"/>
                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/event_detail_basic_info"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/event_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="im title m title m title"/>

                    <LinearLayout
                        android:id="@+id/event_detail_repeat_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/invitee_selected_arrow"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="adwadwadawdwa"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/event_detail_location_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/invitee_selected_arrow"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="adwadwadawdwa"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/event_detail_note_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/invitee_selected_arrow"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="dwadwadwada"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/event_detail_host_second_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_detail_host_first_part"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="bottom"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="@dimen/padding_5"
                    android:textColor="@color/gray_b2b2b2"
                    android:text="\@{hostDetailVM.evDtlHostEvent.invitee.size()>1 ? @string/select_one_or_more_timeslot : @string/select_one_timeslot}"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <org.unimelb.itime.widget.NonScrollListView
                        android:id="@+id/event_detail_timeslot_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="#00000000">
                    </org.unimelb.itime.widget.NonScrollListView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="@string/view_in_calendar"
                        android:textColor="@color/event_detail_repeat"
                        android:onClick="@{hostDetailVM.onClickViewInCalendar()}"
                        android:textSize="17dp" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/event_detail_host_blank"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/event_detail_host_second_part" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_detail_host_blank"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_10">

                <!--Attendee -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/event_detail_host_attendee_title"
                        android:layout_width="65dp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:text="@string/invitee"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/event_detail_host_attendee_arrow"
                        android:text="@{hostDetailVM.evDtlHostEvent.invitee!= null ? EventUtil.getAttendeeString(context,EventUtil.fromInviteeListToArraylist(hostDetailVM.evDtlHostEvent.invitee)) : @string/none}"
                        android:textColor="@color/gray_b2b2b2"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/event_detail_host_attendee_arrow"
                        android:layout_width="8dp"
                        android:layout_height="13dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/padding_10"
                        android:background="@drawable/icon_general_arrow_right" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/event_detail_host_attendee_arrow"
                        android:layout_marginTop="@dimen/padding_10"
                        android:background="@color/gray_b2b2b2" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="@string/url"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/event_detail_host_url_link"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:autoLink="web"
                        android:gravity="center_vertical"
                        android:text="@{hostDetailVM.evDtlHostEvent.url}"
                        android:hint="@string/url"
                        android:onClick="@{hostDetailVM.onClickUrl()}"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/gray_b2b2b2"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/event_detail_host_url_link"
                        android:layout_marginTop="@dimen/padding_5"
                        android:background="@color/gray_b2b2b2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:text="@string/note"
                        android:textSize="17sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/event_detail_host_note"
                            android:layout_width="322dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_10"
                            android:layout_marginTop="@dimen/padding_5"
                            android:text="@{hostDetailVM.evDtlHostEvent.note}"
                            android:textColor="@color/gray_b2b2b2"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/event_detail_host_note_arrow"
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/padding_10"
                            android:background="@drawable/icon_general_arrow_right" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/event_detail_host_note"
                            android:layout_marginTop="@dimen/padding_5"
                            android:background="@color/gray_b2b2b2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/event_detail_host_photo_RL"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/event_detail_host_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/photo"
                            android:textSize="17sp"/>

                        <ImageView
                            android:id="@+id/detail_photo1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/padding_10"
                            android:layout_centerVertical="true"
                            android:visibility="@{hostDetailVM.evDtlHostEvent.photoList.size()>0? View.VISIBLE : View.GONE}"
                            android:src="@{hostDetailVM.evDtlHostEvent.photoList.size()>0? hostDetailVM.evDtlHostEvent.photoList.get(0).getUrl() : @string/none}"
                            />
                        <ImageView
                            android:id="@+id/detail_photo2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_toLeftOf="@+id/detail_photo1"
                            android:layout_marginRight="@dimen/padding_5"
                            android:layout_centerVertical="true"
                            android:visibility="@{hostDetailVM.evDtlHostEvent.photoList.size() > 1 ? View.VISIBLE : View.GONE}"
                            android:src="@{hostDetailVM.evDtlHostEvent.photoList.size() > 1 ? hostDetailVM.evDtlHostEvent.photoList.get(1).getUrl() : @string/none}" />
                        <ImageView
                            android:id="@+id/detail_photo3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_toLeftOf="@id/detail_photo2"
                            android:layout_marginRight="@dimen/padding_5"
                            android:layout_centerVertical="true"
                            android:visibility="@{hostDetailVM.evDtlHostEvent.photoList.size() > 2 ? View.VISIBLE : View.GONE}"
                            android:src="@{hostDetailVM.evDtlHostEvent.photoList.size() > 2 ? hostDetailVM.evDtlHostEvent.photoList.get(2).getUrl() : @string/none}"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/event_detail_host_photo"
                            android:layout_marginTop="@dimen/padding_5"
                            android:background="@color/gray_b2b2b2" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/event_detail_host_photo_RL" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <!-- if it is host event, this show-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_10"
        android:paddingLeft="@dimen/padding_10"
        android:visibility="@{hostDetailVM.evDtlHostEvent.hostUserUid.equals(UserUtil.getInstance.getUserUid())? View.VISIBLE : View.GONE }"
        android:paddingRight="@dimen/padding_10">

        <Button
            android:id="@+id/event_detail_host_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_marginLeft="@dimen/padding_5"
            android:background="@{TimeSlotUtil.chooseAtLeastOnTimeSlot(context, hostDetailVM.evDtlHostEvent.timeslots)? @drawable/background_round_radius_able_blue : @drawable/background_round_radius_unable_blue}"
            android:text="@string/confirm"
            android:clickable="@{TimeSlotUtil.chooseAtLeastOnTimeSlot(context, hostDetailVM.evDtlHostEvent.timeslots)? true: false}"
            android:onClick="@{hostDetailVM.onClickHostConfirm()}"
            android:textAlignment="center"
            android:textColor="@{TimeSlotUtil.chooseAtLeastOnTimeSlot(context, hostDetailVM.evDtlHostEvent.timeslots)? @color/white : @color/gray_b2b2b2}" />

    </LinearLayout>


    <!--if this is invite event, this show-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="@{hostDetailVM.evDtlHostEvent.hostUserUid.equals(UserUtil.getInstance.getUserUid)?  View.GONE:View.VISIBLE }"
        android:paddingBottom="@dimen/padding_10"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_weight="1"
            android:background="@{TimeSlotUtil.chooseAtLeastOnTimeSlot(context, hostDetailVM.evDtlHostEvent.timeslots)? @drawable/background_round_radius_able_blue : @drawable/background_round_radius_unable_blue}"
            android:text="@string/accept"
            android:clickable="@{TimeSlotUtil.chooseAtLeastOnTimeSlot(context, hostDetailVM.evDtlHostEvent.timeslots)? true: false}"
            android:onClick="@{hostDetailVM.onClickAccept()}"
            android:textAlignment="center"
            android:textColor="@{TimeSlotUtil.chooseAtLeastOnTimeSlot(context, hostDetailVM.evDtlHostEvent.timeslots)? @color/white : @color/gray_b2b2b2}" />

        <Button
            android:id="@+id/reject_all_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_weight="1"
            android:background="@{TimeSlotUtil.chooseAtLeastOnTimeSlot(context, hostDetailVM.evDtlHostEvent.timeslots)?  @drawable/background_round_radius_unable_red : @drawable/background_round_radius_able_red}"
            android:text="@string/reject_all"
            android:textAlignment="center"
            android:clickable="@{TimeSlotUtil.chooseAtLeastOnTimeSlot(context, hostDetailVM.evDtlHostEvent.timeslots)? false:true}"
            android:onClick="@{hostDetailVM.onClickRejectAll()}"
            android:textColor="@{TimeSlotUtil.chooseAtLeastOnTimeSlot(context, hostDetailVM.evDtlHostEvent.timeslots)?  @color/gray_b2b2b2 : @color/white}" />
    </LinearLayout>

</RelativeLayout>
</layout>