<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loginVM"
            type="org.unimelb.itime.ui.viewmodel.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="234dp"
            android:layout_height="160dp"
            android:src="@drawable/icon_man_and_calendar"
            />
        <TextView
            android:layout_width="275dp"
            android:layout_height="38dp"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/login_index_subtitle"
            android:textColor="@color/color_C0C7D3"/>
        
        <TextView
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginTop="51dp"
            android:text="@string/signup"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/selector_signup_btn_bg"
            android:onClick="@{loginVM.onSwitchFragment(loginVM.TO_INPUT_EMAIL_FRAG)}"
            />
        <TextView
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:text="@string/login"
            android:gravity="center"
            android:textColor="@drawable/selector_login_btn_text"
            android:background="@drawable/selector_login_btn_bg"
            android:onClick="@{loginVM.onSwitchFragment(loginVM.TO_LOGIN_FRAG)}"
            />
    </LinearLayout>
</layout>
