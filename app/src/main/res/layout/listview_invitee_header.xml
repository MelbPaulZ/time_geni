<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="org.unimelb.itime.ui.viewmodel.contact.InviteFriendViewModel"/>
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_three"
        android:orientation="vertical">

        <org.unimelb.itime.widget.InviteeGroupView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_border"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="7dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"

            app:hintText="@string/search_hint"
            android:id="@+id/inviteeGroupView"
            app:inviteeList = "@{viewModel.inviteeList}"
            app:onInviteeClickListener = "@{viewModel.onInviteeGroupViewItemClickListener}"
            app:onEditListener = "@{viewModel.onEditListener}"
            />

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_tiny"
            android:textColor="@color/grey_four"
            android:text="@{viewModel.countStr}"
            android:visibility="@{viewModel.inviteeList.empty?View.GONE:View.VISIBLE}"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="9dp"

            android:layout_marginBottom="7dp"/>
    </LinearLayout>

    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/inviteAndFriendsLayout"
        android:visibility="@{viewModel.searching?View.GONE:View.VISIBLE}">

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/inviteContactsLayout">

            <!--<org.unimelb.itime.widget.WideArrowButton-->
