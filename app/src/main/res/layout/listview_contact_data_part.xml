<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="org.unimelb.itime.ui.viewmodel.contact.ContactItemViewModel"/>
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <org.unimelb.itime.widget.RoundImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        app:smallAvatar="@{viewModel.photo}"
        android:layout_gravity="center_vertical"
        android:id="@+id/avatarView"
        android:layout_weight="0"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_weight="1">
        <TextView
            android:text="@{viewModel.name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/font_large"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:text="@{viewModel.contactId}"
            android:visibility="@{viewModel.showDetail?View.VISIBLE:View.GONE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/font_middle"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>
    </LinearLayout>
</layout>