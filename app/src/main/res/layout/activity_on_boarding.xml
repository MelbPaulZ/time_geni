<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="org.unimelb.itime.ui.viewmodel.OnBoardingViewModel"/>
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <android.support.v4.view.ViewPager
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewpager"
            />

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="61dp"
        android:layout_height="24dp"
        android:text="@string/skip"
        android:textSize="@dimen/font_big"
        android:textColor="@color/White"
        android:background="@drawable/drawable_skip_background"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:onClick="@{viewModel.skipListener}"
        android:visibility="@{viewModel.showSkip?View.VISIBLE:View.GONE}"/>

    <ImageView
        android:layout_width="54dp"
        android:layout_height="8dp"
        android:background="@{viewModel.dotImage}"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        />
</RelativeLayout>
</FrameLayout>
</layout>