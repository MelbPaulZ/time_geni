<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="mainViewModel"
            type="org.unimelb.itime.ui.viewmodel.contact.AddFriendsViewModel"/>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="@{mainViewModel.showTitle?View.VISIBLE:View.GONE}">
    <include layout="@layout/toolbar_common"
        app:vm="@{toolbarVM}" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="7.5dp"
        android:paddingBottom="7.5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@color/grey_six">
        <org.unimelb.itime.widget.SearchBar
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:id="@+id/searchBar"
            app:searchHintTitle="@string/search"
            app:searchHintText="@string/search_hint"
            app:searchListener = "@{mainViewModel.onEditListener}"
            app:showSearchButton="@{mainViewModel.resetSearchBar}"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/red_alert"
            android:text="@string/cancel"
            android:id="@+id/cancelButton"
            android:layout_marginLeft="8dp"
            android:layout_weight="0"
            android:visibility="@{mainViewModel.showCancel?View.VISIBLE:View.GONE}"
            android:onClick="@{mainViewModel.cancelListener}"
            />
    </LinearLayout>
    <include layout="@layout/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/buttonsLayout"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="@{mainViewModel.showButtons?View.VISIBLE:View.GONE}">
        <!--<org.unimelb.itime.widget.WideArrowButton-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:image="@drawable/phone_contact_icon"-->
            <!--app:text="Add Mobile Contacts"-->
            <!--android:onClick="@{mainViewModel.phoneListener}"/>-->
        <!--<include layout="@layout/line"/>-->
        <!--<org.unimelb.itime.widget.WideArrowButton-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:image="@drawable/gmail_contact"-->
            <!--app:text="Add Gmail Contacts"-->
            <!--android:onClick="@{mainViewModel.gmailListener}"/>-->
        <!--<include layout="@layout/line"/>-->
        <!--<org.unimelb.itime.widget.WideArrowButton-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:image="@drawable/facebook_contact"-->
            <!--app:text="Add Facebook Contacts"-->
            <!--android:onClick="@{mainViewModel.facebookListenser}"/>-->
        <!--<include layout="@layout/line"/>-->
        <org.unimelb.itime.widget.WideArrowButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:image="@drawable/qr_code_icon"
            app:text="@string/scan_qr_code"
            android:onClick="@{mainViewModel.qdListener}"/>
        <include layout="@layout/line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <org.unimelb.itime.widget.WideArrowButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:image="@drawable/searching_icon"
            app:text="@{mainViewModel.searchText}"
            android:id="@+id/searchButton"
            android:onClick="@{mainViewModel.searchButtonListener}"
            android:visibility="@{mainViewModel.showSearch?View.VISIBLE:View.GONE}" />
        <include layout="@layout/line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="@{mainViewModel.showNotFound?View.VISIBLE:View.GONE}">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_big"
            android:text="User not found"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"/>
        <org.unimelb.itime.widget.BlueButton
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@{mainViewModel.inviteText}"
            android:textSize = "@dimen/font_big"
            android:layout_gravity="center_horizontal"
            android:visibility="@{mainViewModel.isUnimelb?View.VISIBLE:View.GONE}"
            android:onClick="@{()-> mainViewModel.sendInvite()}"/>
        <TextView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:background="@drawable/grey_cornor"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@{mainViewModel.inviteText}"
            android:textColor="@color/white"
            android:textSize = "@dimen/font_big"
            android:layout_gravity="center_horizontal"
            android:visibility="@{mainViewModel.isUnimelb?View.GONE:View.VISIBLE}"
            android:onClick="@{()-> mainViewModel.setShowAlert(true)}"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text= "*Sorry, currently Timegenii is only available to University of Melbourne Email Account."
            android:textColor="@color/red_alert"
            android:textSize="@dimen/font_normal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:visibility="@{mainViewModel.showAlert?View.VISIBLE:View.GONE}"/>


    </LinearLayout>

</LinearLayout>
    </layout>