<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="org.unimelb.itime.util.EventUtil"/>
        <import type="org.unimelb.itime.util.CalendarUtil"/>
        <import type="android.view.View"/>
        <import type="org.unimelb.itime.ui.viewmodel.EventCommonViewModel.PickerTask"/>
        <variable
            name="newEventDetailVM"
            type="org.unimelb.itime.ui.viewmodel.EventCreateDetailBeforeSendingViewModel" />
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                <Button
                    android:id="@+id/event_detail_before_sending_cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:onClick="@{newEventDetailVM.onClickCancel()}"
                    android:textColor="@color/page_title_color"
                    android:text="@{newEventDetailVM.leftTitleStr}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/page_text_size"
                    android:textColor="@color/page_title_color"
                    android:text="@{newEventDetailVM.titleStr}" />

                <Button
                    android:id="@+id/event_detail_before_sending_send_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:onClick="@{newEventDetailVM.onClickSend()}"
                    android:textColor="@color/page_title_color"
                    android:text="@{newEventDetailVM.rightTitleStr}" />
            </android.support.v7.widget.Toolbar>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onTouch="@{newEventDetailVM.onScrollViewTouch}"
            android:scrollbarStyle="insideOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_new_event_edit"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:clickable="true"
                android:orientation="vertical">
                <!--blank for border-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/page_blank_row_height"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_10"
                    android:background="@color/bg_new_event_edit" />
                <!-- end -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_row_border"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="0dp">
                    <!--Tittle Row-->
                    <EditText
                        android:id="@+id/before_sending_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:text="@={newEventDetailVM.newEvDtlEvent.title}"
                        android:onFocusChange="@{newEventDetailVM.onEditFocusChange}"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/text_enable"
                        android:textSize="@dimen/page_text_size" />

                    <!--Fst Row-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textColor="@color/text_enable"
                            android:textSize="@dimen/page_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:onClick="@{newEventDetailVM.changeLocation}"
                            android:text="@{newEventDetailVM.newEvDtlEvent.location}"
                            android:textColor="@color/text_disable"
                            android:textSize="@dimen/page_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Repeat"
                            android:textColor="@color/text_enable"
                            android:textSize="@dimen/page_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:onClick="@{newEventDetailVM.chooseRepeat()}"
                            android:text="@{newEventDetailVM.getRepeatString(newEventDetailVM.newEvDtlEvent)}"
                            android:textColor="@color/text_disable"
                            android:textSize="@dimen/page_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:onClick="@{newEventDetailVM.onChangeDate(PickerTask.END_REPEAT)}"
                        android:visibility="@{EventUtil.isEventRepeat(newEventDetailVM.newEvDtlEvent) ? View.VISIBLE : View.GONE}"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/end_repeat"
                            android:textColor="@color/text_enable"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="@dimen/padding_10"
                            android:text="@{EventUtil.getRepeatEndString(context, newEventDetailVM.newEvDtlEvent)}"
                            android:textColor="@color/text_disable"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:onClick="@{newEventDetailVM.pickInvitees()}"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/invitee"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/text_enable"
                            android:textSize="@dimen/page_text_size" />

                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical|right"
                            android:src="@drawable/arrow" />

                        <LinearLayout
                            android:id="@+id/create_event_attendee_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_toLeftOf="@id/arrow"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/invitee_1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="2dp"
                                app:urls="@{newEventDetailVM.newEvDtlEvent.invitee}"
                                app:index="@{0}"/>
                            <ImageView
                                android:id="@+id/invitee_2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="2dp"
                                app:urls="@{newEventDetailVM.newEvDtlEvent.invitee}"
                                app:index="@{1}"/>
                            <ImageView
                                android:id="@+id/invitee_3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="2dp"
                                app:urls="@{newEventDetailVM.newEvDtlEvent.invitee}"
                                app:index="@{2}"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <!--Proposed time slot-->
                    <RelativeLayout
                        app:timeslotVisible="@{newEventDetailVM.newEvDtlEvent}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{newEventDetailVM.onClickProposedTimeslots()}"
                        android:background="@drawable/table_row_border">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_alignParentLeft="true"
                            android:onClick="@{newEventDetailVM.onClickProposedTimeslots()}"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Proposed Timeslots"
                                android:textColor="@color/text_enable"
                                android:textSize="@dimen/page_text_size" />
                            <org.unimelb.itime.widget.NonScrollListView
                                android:id="@+id/before_sending_listview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:divider="#00000000">
                            </org.unimelb.itime.widget.NonScrollListView>

                        </LinearLayout>
                        <!--<RelativeLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="60dp"-->
                            <!--android:layout_alignParentEnd="true"-->
                            <!--android:layout_centerVertical="true">-->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="-35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:onClick="@{newEventDetailVM.onClickProposedTimeslots()}"
                            android:src="@drawable/arrow" />
                        <!--</RelativeLayout>-->
                    </RelativeLayout>

                    <!--blank for border-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/page_blank_row_height"
                        android:background="@color/bg_new_event_edit" />
                    <!--end -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/page_text_size"
                            android:text="@string/all_day"
                            android:textColor="@color/text_enable"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="@{newEventDetailVM.isAllDay}"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/table_row_border"
                        android:visibility="@{newEventDetailVM.startVisibility}">

                        <TextView
                            style="@style/itime_blacktitle_17sp"
                            android:text="Starts" />

                        <TextView
                            android:id="@+id/create_event_start_time"
                            style="@style/itime_select_time_16sp"
                            android:onClick="@{newEventDetailVM.onChangeTime(PickerTask.START_TIME)}"
                            android:text="@{EventUtil.getSelectTimeStringFromLong(context, newEventDetailVM.newEvDtlEvent.startTime)}"
                            android:textColor="@color/text_enable" />

                        <TextView
                            style="@style/itime_select_date_16sp"
                            android:onClick="@{newEventDetailVM.onChangeDate(PickerTask.START_TIME)}"
                            android:text="@{EventUtil.getSelectDateStringFromLong(context, newEventDetailVM.newEvDtlEvent.startTime)}"
                            android:layout_toLeftOf="@+id/create_event_start_time"
                            android:layout_marginRight="15dp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:onClick="@{newEventDetailVM.onChangeTime(PickerTask.END_TIME)}"
                        android:visibility="@{newEventDetailVM.endVisibility}">

                        <TextView
                            style="@style/itime_blacktitle_17sp"
                            android:text="Ends" />

                        <TextView
                            android:id="@+id/create_event_end_time"
                            style="@style/itime_select_time_16sp"
                            android:onClick="@{newEventDetailVM.onChangeTime(PickerTask.END_TIME)}"
                            android:text="@{EventUtil.getSelectTimeStringFromLong(context, newEventDetailVM.newEvDtlEvent.endTime)}"
                            android:textColor="@color/text_enable" />

                        <TextView
                            style="@style/itime_select_date_16sp"
                            android:onClick="@{newEventDetailVM.onChangeDate(PickerTask.END_TIME)}"
                            android:text="@{EventUtil.getSelectDateStringFromLong(context, newEventDetailVM.newEvDtlEvent.endTime)}"
                            android:layout_toLeftOf="@+id/create_event_end_time"
                            android:layout_marginRight="15dp"
                            />
                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:background="@drawable/table_row_border"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{newEventDetailVM.pickAlertTime()}"
                        android:background="@drawable/table_row_border">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/alert_time"
                            android:textColor="@color/text_enable"
                            android:textSize="@dimen/page_text_size" />

                        <ImageView
                            android:id="@+id/before_sending_alert_arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/arrow" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/page_text_size"
                            android:textColor="@color/text_disable"
                            android:layout_toLeftOf="@+id/before_sending_alert_arrow"
                            android:layout_marginLeft="@dimen/padding_5"
                            android:text="@{EventUtil.getAlertTimeFromIndex(context, newEventDetailVM.newEvDtlEvent.reminder)}"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:onClick="@{newEventDetailVM.onClickCalendarType}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calendar"
                            android:textColor="@color/text_enable"
                            android:textSize="@dimen/page_text_size"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@{CalendarUtil.getInstance(context).getCalendarName(newEventDetailVM.newEvDtlEvent)}"
                            android:textColor="@color/text_disable"
                            android:textSize="@dimen/page_text_size" />

                    </RelativeLayout>

                </LinearLayout>

                <!--blank for border-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/bg_new_event_edit" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_row_border"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="URL"
                            android:textColorHint="@color/text_disable"
                            android:text="@={newEventDetailVM.newEvDtlEvent.url}"
                            android:onFocusChange="@{newEventDetailVM.onEditFocusChange}"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:autoLink="all"
                            android:linksClickable="true"
                            android:textColor="@color/blue"
                            android:background="@android:color/transparent"
                            android:textSize="@dimen/page_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:orientation="vertical">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Note"
                            android:text="@={newEventDetailVM.newEvDtlEvent.description}"
                            android:onFocusChange="@{newEventDetailVM.onEditFocusChange}"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:background="@android:color/transparent"
                            android:textColor="@color/text_enable"
                            android:textSize="@dimen/page_text_size" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/photo"
                            android:textSize="@dimen/page_text_size"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>
                        <HorizontalScrollView
                            android:id="@+id/before_sending_photoList"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/before_sending_photo_arrow"
                            android:layout_marginLeft="@dimen/padding_10"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/before_sending_photo1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginRight="@dimen/padding_10"
                                    loadLocalImg="@{newEventDetailVM.newEvDtlEvent}" />

                                <ImageView
                                    android:id="@+id/before_sending_photo2"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginRight="@dimen/padding_10"
                                    loadLocalImg="@{newEventDetailVM.newEvDtlEvent}" />

                                <ImageView
                                    android:id="@+id/before_sending_photo3"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    loadLocalImg="@{newEventDetailVM.newEvDtlEvent}" />
                            </LinearLayout>
                        </HorizontalScrollView>

                        <ImageView
                            android:id="@+id/before_sending_photo_arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:onClick="@{newEventDetailVM.pickPhoto()}"
                            android:src="@drawable/arrow" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>