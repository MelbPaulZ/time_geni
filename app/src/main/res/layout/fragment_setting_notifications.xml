    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_fafafa">

        <!--first part-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="16dp"
            android:background="@drawable/background_top_bottom_divider">

            <TextView
                style="@style/itime_blacktitle_17sp"
                android:text="@string/notifications"/>
            
            <TextView
                style="@style/itime_subtitle_15sp"
                android:layout_marginRight="15dp"
                android:text="Enable"/>
        </RelativeLayout>

        <!-- second part, subtext 1 -->
        <TextView
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingTop="5dp"
            android:text="@string/setting_notifications_subtext1"
            android:textColor="@color/color_757575"
            android:textSize="15sp"
            />

        <!--third part, show preview text-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/background_top_bottom_divider"
            android:paddingLeft="16dp"
            android:layout_marginTop="21dp"
            >
            <TextView
                style="@style/itime_blacktitle_17sp"
                android:text="@string/setting_show_preview_Text"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:checked="true"
                />
        </RelativeLayout>

