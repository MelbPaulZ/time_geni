            android:textColor="@color/color_757575"
            android:textSize="15sp"
            />

        <!--fifth part-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="21dp"
            android:background="@drawable/background_top_bottom_divider"
            android:paddingLeft="16dp">

            <!--in app alert sound-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                >
                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_in_app_alert_sound"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    style="@style/itime_bottom_divider_line" />

            </RelativeLayout>

            <!--Vibrate-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_vibrate"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>


        </LinearLayout>


        <!--sixth part, subtext 3-->
        <TextView
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingTop="5dp"
            android:text="@string/setting_notifications_subtext3"
            android:textColor="@color/color_757575"
            android:textSize="15sp"
            />
