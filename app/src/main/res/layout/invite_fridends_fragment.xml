<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="org.unimelb.itime.ui.contact.ViewModel.InviteFriendViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <org.unimelb.itime.ui.contact.Widget.DoneTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@{viewModel.title}"
            app:showLeft="@{viewModel.showTitleBack}"
            app:showRight="@{viewModel.showTitleRight}"
            app:titleBackListener="@{viewModel.titleBackListener}"
            app:titleRightListener="@{viewModel.titleRightListener}"
            android:id="@+id/titleBar" />

        <include layout="@layout/line" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/friendsListView"
            />

        <include layout="@layout/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.searching?View.VISIBLE:View.GONE}"
            android:clickable="@{viewModel.addButtonClickable}"
            android:onClick="@{viewModel.addButtonListener}">

            <org.unimelb.itime.ui.contact.Widget.RoundImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@{viewModel.addButtonClickable?@drawable/blue_plus_icon:@drawable/grey_plus_icon}"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/avatarView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/avatarView"
                android:layout_marginLeft="10dp">

                <TextView
                    android:text="Add Invitee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@{viewModel.addButtonText}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@{viewModel.addButtonClickable?@color/blue:@color/normalGrey}"
                    android:id="@+id/contactTextView" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</layout>