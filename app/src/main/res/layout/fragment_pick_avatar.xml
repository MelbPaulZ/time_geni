<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="loginVM"
            type="org.unimelb.itime.ui.viewmodel.LoginViewModel"/>
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true">
    <ImageView
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:onClick="@{loginVM.onClickAvatar}"
        android:background="@drawable/icon_back_arrow"
        />
    <ImageView
        android:layout_width="136dp"
        android:layout_height="150dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/icon_profile_pic"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="282dp"
        android:layout_marginLeft="70dp"
        android:text="@string/your_name"
        android:textSize="11sp"
        android:textColor="@color/color_8190A7" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="315dp"
        android:background="#00000000"
        android:text="Alex Wang"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="346dp"
        android:background="@color/color_bec9d1"
        android:src="@drawable/itime_header_divider_line"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="389dp"
        android:text="@string/complete_your_profile_so_that_your_friends_can_recognize_you"
        android:textSize="18sp"
        android:textColor="@color/color_C0C7D3"
        />
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_round_radius_able_blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</RelativeLayout>
</layout>