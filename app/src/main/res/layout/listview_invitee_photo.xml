<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="org.unimelb.itime.util.UserUtil"/>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="org.unimelb.itime.bean.Invitee"/>
        <import type="org.unimelb.itime.bean.Invitee" />

    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="37dp"
        android:layout_height="37dp">

        <org.unimelb.itime.widget.RoundImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            app:loadRemoteUrlWithCircle="@{item.aliasPhoto}"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src='@{item.status.equals(Invitee.STATUS_DECLINED)? @drawable/icon_event_response_rejected:item.isHost==1 ? @drawable/icon_event_host_selected:@drawable/icon_event_invitee_selected }'
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</layout>