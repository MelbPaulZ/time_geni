<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="org.unimelb.itime.util.AppUtil"/>
        <variable
            name="contentVM"
            type="org.unimelb.itime.ui.viewmodel.CalendarPreferenceViewModel"/>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar_common"
            bind:vm="@{toolbarVM}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/color_fafafa">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_top_bottom_divider">

                <!--Calendars part-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:onClick="@{contentVM.onCalendarsClick()}">

                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:text="@string/setting_calendars"/>

                    <ImageView
                        style="@style/image_right_arrow" />

                    <TextView
                        style="@style/itime_bottom_divider_line" />
                </RelativeLayout>


                <!--Default alert-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:onClick="@{contentVM.onAlertClick()}"
                    android:layout_marginLeft="16dp">
                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:text="@string/setting_default_alert"/>

                    <ImageView
                        style="@style/image_right_arrow" />

                    <TextView
                        style="@style/itime_bottom_divider_line" />

                    <TextView
                        style="@style/itime_subtitle_15sp"
                        android:text="@{AppUtil.getDefaultAlertStr(contentVM.setting.defaultAlertTime)}"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:onClick="@{contentVM.onImportCalClick()}"
                    >

                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:text="@string/setting_import_calendar_from"/>

                    <ImageView
                        style="@style/image_right_arrow" />

                </RelativeLayout>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
