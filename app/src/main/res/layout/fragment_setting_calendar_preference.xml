<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="settingVM"
            type="org.unimelb.itime.ui.viewmodel.MainSettingsViewModel"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        style="@style/itime_toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--toolbar back arrow-->
            <ImageView
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_back_arrow"
                android:layout_centerVertical="true"
                />

            <!--toolbar settings text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_setting"
                android:onClick="@{settingVM.onViewChange(settingVM.TASK_TO_SETTING)}"
                android:textColor="@color/title_6D6D6D"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                />

            <!--toolbar title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calendar_preferences"
                android:textSize="17sp"
                android:textColor="@color/color_424242"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_fafafa">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_top_bottom_divider">

            <!--Calendars part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp">
                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_calendars"/>

                <ImageView
                    style="@style/image_right_arrow" />

                <TextView
                    style="@style/itime_bottom_divider_line" />
            </RelativeLayout>

            <!--Default Calendar-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:onClick="@{settingVM.onViewChange(settingVM.TASK_TO_DEFAULT_CALENDAR)}">
                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_default_calendar"/>

                <ImageView
                    style="@style/image_right_arrow" />

                <TextView
                    style="@style/itime_subtitle_15sp"
                    android:text="work"
                    />

                <TextView
                    style="@style/itime_bottom_divider_line" />
            </RelativeLayout>

            <!--Default alert-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp">
                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_default_alert"/>

                <ImageView
                    style="@style/image_right_arrow" />

                <TextView
                    style="@style/itime_bottom_divider_line" />

                <TextView
                    style="@style/itime_subtitle_15sp"
                    android:text="15 minutes before"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:onClick="@{settingVM.onViewChange(settingVM.TASK_TO_IMPORT_CALENDAR)}"
                >

                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_import_calendar_from"/>

                <ImageView
                    style="@style/image_right_arrow" />

            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</layout>
