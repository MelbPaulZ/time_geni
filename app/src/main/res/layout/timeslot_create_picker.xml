<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="org.unimelb.itime.ui.viewmodel.TimeslotCreateViewModel"/>
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/timeslot_picker_done_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:layout_alignParentEnd="true"
        android:textSize="17sp"
        android:onClick="@{vm.onClickPickerDone()}"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/timeslot_picker_done_btn">
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/year_wheel_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/month_wheel_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/day_wheel_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/hour_wheel_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/minute_wheel_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>
</layout>