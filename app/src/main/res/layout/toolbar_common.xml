<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel" />
    </data>

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/divider_bottom">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@{vm.leftTitleStr}"
                    android:textColor="@{vm.leftColor}"
                    android:clickable="@{vm.leftClickable}"
                    android:background="@{vm.leftDrawable}"
                    android:textSize="17sp"
                    android:onClick="@{vm.onClickLeft()}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@{vm.titleStr}"
                    android:textColor="@color/color_424242"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="@{vm.rightTitleStr}"
                    android:enabled="@{vm.rightClickable}"
                    android:textColor="@drawable/toolbar_state_right_btn"
                    android:onClick="@{vm.onClickRight()}"
                    android:background="@{vm.rightDrawable}"
                    android:textSize="17sp" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

</layout>
