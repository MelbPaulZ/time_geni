<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="loginVM"
            type="org.unimelb.itime.ui.viewmodel.LoginViewModel"/>
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <!--close icon-->
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/icon_close"
        android:layout_marginTop="17dp"
        android:onClick="@{loginVM.toCalendar()}"
        android:layout_marginLeft="20dp" />
    
    <!--Friend icon-->
    <ImageView
        android:layout_width="139dp"
        android:layout_height="112dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72dp"
        android:background="@drawable/icon_friends" />

    <!--Find friend title-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_find_friend_title"
        android:textSize="28sp"
        android:layout_marginTop="48dp"
        android:textColor="@color/color_8190A7" />

    <!--Find friend subtitle-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_find_friend_subtitle"
        android:textSize="18sp"
        android:textColor="@color/color_C0C7D3"
        android:textAlignment="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <!--Find friend button1-->
    <TextView
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/selector_signup_btn_bg"
        android:text="@string/login_find_friend_button1"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:onClick="@{loginVM.addFromContact}"
        android:layout_gravity="center_horizontal" />
    
    <TextView
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="73dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_find_friend_button2"
        android:onClick="@{loginVM.addFromGmail}"
        android:textColor="@color/white"
        android:background="@drawable/background_round_radius_able_red"
        />

</LinearLayout>
</layout>
