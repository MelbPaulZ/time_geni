<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="contentVM"
            type="org.unimelb.itime.ui.viewmodel.SettingViewModel"/>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_common"
            bind:vm="@{toolbarVM}"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:onListItemClick="@{contentVM.onAlertItemClicked()}"
            app:items="@{contentVM.alertSet}"
            app:itemView="@{contentVM.alertItemView}" />
    </LinearLayout>
</layout>
