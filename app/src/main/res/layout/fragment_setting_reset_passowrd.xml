<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="contentVM"
            type="org.unimelb.itime.ui.viewmodel.UserProfileViewModel"/>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_common"
        bind:vm="@{toolbarVM}"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_fafafa">

        <!--first part-->
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/setting_reset_password_subtext1"/>


        <!--second part-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/background_top_bottom_divider">
            
            <!--Email part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:layout_marginLeft="16dp"
                    android:text="@string/setting_email"
                    android:textColor="@color/color_757575"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="99dp"
                    android:text="@{contentVM.user.email}"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_757575"
                    android:textSize="15sp"
                    />

                <TextView
                    style="@style/itime_bottom_divider_line" />
            </RelativeLayout>

            <!--password-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_password"
                    android:paddingLeft="16dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="99dp"
                    android:hint="@string/setting_password_hint"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_bdbdbd"
                    android:background="#00000000"
                    android:inputType="textPassword"
                    android:minWidth="200dp"
                    android:textSize="15sp"
                    android:text="@={contentVM.password}"
                    />

                <TextView
                    style="@style/itime_bottom_divider_line" />

            </RelativeLayout>

            <!--password confimation-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_confirm"
                    android:layout_marginLeft="16dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="99dp"
                    android:hint="@string/setting_confirm_hint"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_bdbdbd"
                    android:background="#00000000"
                    android:inputType="textPassword"
                    android:minWidth="200dp"
                    android:textSize="15sp"
                    android:text="@={contentVM.passwordConfirmation}"
                    />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</layout>
