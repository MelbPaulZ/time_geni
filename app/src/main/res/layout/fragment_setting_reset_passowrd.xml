<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="settingVM"
            type="org.unimelb.itime.ui.viewmodel.MainSettingsViewModel"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        style="@style/itime_toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--toolbar back arrow-->
            <ImageView
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_back_arrow"
                android:layout_centerVertical="true"
                />

            <!--toolbar settings text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_my_profile"
                android:textColor="@color/title_6D6D6D"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:onClick="@{settingVM.onViewChange(settingVM.TASK_TO_MY_PROFILE, false)}"
                android:layout_marginLeft="14dp"
                />

            <!--toolbar title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_reset_password"
                android:textSize="17sp"
                android:textColor="@color/color_424242"
                android:layout_centerInParent="true"
                />

            <!--done btn-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/done"
                android:textColor="@color/color_448aff"
                android:textSize="17sp"
                android:onClick="@{settingVM.onViewChange(settingVM.TASK_TO_MY_PROFILE, true)}"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_fafafa">

        <!--first part-->
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/setting_reset_password_subtext1"/>


        <!--second part-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/background_top_bottom_divider">
            
            <!--Email part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:layout_marginLeft="16dp"
                    android:text="@string/setting_email"
                    android:textColor="@color/color_757575"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="99dp"
                    android:text="@{settingVM.setting.user.email}"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_757575"
                    android:textSize="15sp"
                    />

                <TextView
                    style="@style/itime_bottom_divider_line" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_password"
                    android:paddingLeft="16dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="99dp"
                    android:hint="@string/setting_password_hint"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_bdbdbd"
                    android:background="#00000000"
                    android:inputType="textPassword"
                    android:minWidth="200dp"
                    android:textSize="15sp"
                    />

                <TextView
                    style="@style/itime_bottom_divider_line" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_confirm"
                    android:layout_marginLeft="16dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="99dp"
                    android:hint="@string/setting_confirm_hint"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_bdbdbd"
                    android:background="#00000000"
                    android:inputType="textPassword"
                    android:minWidth="200dp"
                    android:textSize="15sp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</layout>
