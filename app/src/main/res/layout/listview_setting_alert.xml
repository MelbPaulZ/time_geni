<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="alertWrapper"
            type="org.unimelb.itime.ui.viewmodel.SettingViewModel.AlertWrapper" />
        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            style="@style/itime_blacktitle_17sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@{alertWrapper.name}"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/blue_tick"
            android:visibility="@{alertWrapper.selected ? View.VISIBLE : View.GONE}"
            />

        <TextView style="@style/itime_bottom_divider_line" />
    </RelativeLayout>

</layout>