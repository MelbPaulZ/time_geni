<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="settingVM"
            type="org.unimelb.itime.ui.viewmodel.MainSettingsViewModel"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        style="@style/itime_toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--toolbar back arrow-->
            <ImageView
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_back_arrow"
                android:layout_centerVertical="true"
                />

            <!--toolbar settings text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/title_6D6D6D"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:onClick="@{settingVM.onViewChange(settingVM.TASK_TO_IMPORT_CALENDAR, false)}"
                />

            <!--toolbar title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_import_calendar"
                android:textSize="17sp"
                android:textColor="@color/color_424242"
                android:layout_centerInParent="true"
                />

            <!--done btn-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/done"
                android:textColor="@color/color_448aff"
                android:textSize="17sp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:onClick="@{settingVM.onViewChange(settingVM.TASK_TO_IMPORT_CALENDAR, true)}"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_fafafa">

        <!--first part, subtext1-->
        <TextView
            android:paddingTop="15dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/setting_calendar_import_unimelb_subtext1"
            android:textColor="@color/color_757575"
            android:textSize="15sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="24dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_top_bottom_divider">
            <!--Email part-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp">
                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/email"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="99dp"
                    android:hint="@string/email"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_bdbdbd"
                    android:minWidth="200dp"
                    android:textSize="15sp"
                    />
                <TextView
                    style="@style/itime_bottom_divider_line" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp">
                <TextView
                    style="@style/itime_blacktitle_17sp"
                    android:text="@string/setting_password"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="99dp"
                    android:hint="@string/setting_password"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_bdbdbd"
                    android:minWidth="200dp"
                    android:inputType="textPassword"
                    android:textSize="15sp"
                    />
            </RelativeLayout>
            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</layout>
