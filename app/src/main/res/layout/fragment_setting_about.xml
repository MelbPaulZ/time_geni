<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="settingVM"
            type="org.unimelb.itime.ui.viewmodel.MainSettingsViewModel"/>
    </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- the toolbar has a default padding, 10 dp approx-->
    <android.support.v7.widget.Toolbar
        style="@style/itime_toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--toolbar back arrow-->
            <ImageView
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_back_arrow"
                android:layout_centerVertical="true"
                />

            <!--toolbar settings text-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_settings"
                android:textColor="@color/title_6D6D6D"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:onClick="@{settingVM.onViewChange(settingVM.TASK_TO_SETTING, false)}"
                />

            <!--toolbar title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_fafafa">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/icon_about_logo"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Itime 1.0.01"
            android:textSize="17sp"
            android:textColor="@color/title_6D6D6D"
            android:layout_marginTop="2dp"
            />
    </LinearLayout>

    <!--second part-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="13dp"
        android:background="@drawable/background_top_bottom_divider">

        <!--Rate itime-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp">
            <TextView
                style="@style/itime_blacktitle_17sp"
                android:text="@string/rate_itime"/>

            <ImageView
                style="@style/image_right_arrow" />

            <TextView
                style="@style/itime_bottom_divider_line" />

        </RelativeLayout>


        <!--Terms of services-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp">
            <TextView
                style="@style/itime_blacktitle_17sp"
                android:text="@string/terms_of_service"/>

            <ImageView
                style="@style/image_right_arrow" />

            <TextView
                style="@style/itime_bottom_divider_line" />
        </RelativeLayout>

        <!--Privacy policy-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp">
            <TextView
                style="@style/itime_blacktitle_17sp"
                android:text="@string/privacy_policy"/>

            <ImageView
                style="@style/image_right_arrow" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
</layout>
