<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>
        <variable
            name="timeslotVM"
            type="org.unimelb.itime.ui.viewmodel.EventCreateTimeslotViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar_timeslot"
            layout="@layout/toolbar_common"
            bind:vm="@{toolbarVM}"/>

        <org.unimelb.itime.vendor.weekview.WeekView
            android:id="@+id/timeslot_week_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_timeslot"
            android:layout_above="@+id/duration_part"
            app:onWeekViewDayChange="@{timeslotVM.onWeekViewChange()}">
        </org.unimelb.itime.vendor.weekview.WeekView>

        <RelativeLayout
            android:id="@+id/duration_part"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{timeslotVM.durationTimeString}"
                android:textSize="18sp"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>

</layout>