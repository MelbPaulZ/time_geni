<layout>
    <data>
        <variable
            name="vm"
            type="org.unimelb.itime.ui.viewmodel.InboxViewModel"/>
        <variable
            name="position"
            type="Integer"/>
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="79dp">
    <TextView
        android:id="@+id/inbox_host_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:text="@{vm.getTag1(vm.)}"
        android:textColor="@color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/inbox_host_tag_blue"
        />

    <TextView
        android:id="@+id/inbox_host_tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/inbox_host_tag1"
        android:text="2 Reject"
        android:textColor="@color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/inbox_host_tag_red"/>

    <TextView
        android:id="@+id/inbox_host_tag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/inbox_host_tag2"
        android:text="3 No Reply"
        android:textColor="@color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/inbox_host_tag_gray"/>

    <TextView
        android:id="@+id/inbox_host_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="14dp"
        android:text="Group meeting with Market Team"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/inbox_host_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:textSize="10sp"
        android:text="yesterday"
        android:textColor="@color/gray_9b9b9b"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:id="@+id/inbox_host_split_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:textColor="@color/gray_9b9b9b"
        android:layout_alignParentBottom="true"
        android:paddingBottom="1dp"
        />
    <TextView
        android:id="@+id/inbox_host_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inbox_host_title"
        android:layout_marginLeft="15dp"
        android:paddingTop="2dp"
        android:textColor="@color/color_FF9600"
        android:text="Waiting for you to confirm"
        android:textSize="12sp"
        />
</RelativeLayout>
</layout>