<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="org.unimelb.itime.util.TimeSlotUtil"/>
        <import type="org.unimelb.itime.util.EventUtil"/>
        <variable
            name="itemVM"
            type="org.unimelb.itime.ui.viewmodel.EventDetailViewModel.SubTimeslotViewModel"/>

    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:onClick="@{itemVM.onLeftPartClicked()}"
        android:orientation="vertical">

        <!--this is the icon for select timeslot-->
        <ImageView
            android:id="@+id/event_detail_host_ic_circle"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="10dp"
            android:selected="@{itemVM.iconSelected}"
            android:background="@drawable/selector_icon_timeslot_bg"
            android:layout_marginTop="14dp"/>
        <!--android:background="@{itemVM.imageBackGround}"-->
        <!--android:background="@{TimeSlotUtil.isTimeSlotSelected(context, viewmodel.evDtlHostEvent, position) ? @drawable/icon_event_invitee_selected : @drawable/icon_event_invitee_unselected}"-->


        <!--this is timeslot string-->
        <TextView
            android:id="@+id/timeslot_event_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/event_detail_host_ic_circle"
            android:textColor="@color/text_enable"
            android:text="@{EventUtil.getSuggestTimeStringFromLong(context, itemVM.wrapper.timeSlot.startTime, itemVM.wrapper.timeSlot.endTime)}"
            android:textSize="17sp" />
        <!--android:text="@{EventUtil.getSuggestTimeStringFromLong(context, viewmodel.evDtlHostEvent.timeslot.get(position).startTime,viewmodel.evDtlHostEvent.timeslot.get(position).endTime )}"-->


        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:onClick="@{itemVM.onRightPartClicked()}"
            />
        <!--android:onClick="@{viewmodel.viewInviteeResponse(viewmodel.evDtlHostEvent.timeslot.get(position))}"-->


        <!--this is arrow image-->
        <ImageView
            android:id="@+id/host_timeslot_right_arrow"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10"
            android:background="@drawable/icon_general_arrow_right" />

        <!--this is showing accept number of invitees-->
        <TextView
            android:id="@+id/timeslot_listview_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_toLeftOf="@+id/host_timeslot_right_arrow"
            android:textColor="@color/gray_b2b2b2"
            android:text="@{itemVM.getPeopleNum(itemVM.wrapper.timeSlot, itemVM.replyData)}"
            android:textSize="17dp" />
        <!--android:text="@{itemVM.getPeopleNum(itemVM.wrapper.timeSlot, itemVM.replyData)}"-->
        <!--android:text="@{viewmodel.getPeopleNum(viewmodel.evDtlHostEvent.timeslot.get(position),viewmodel.evAdapterEvent)}"-->


        <!--this is the under line-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/event_detail_host_ic_circle"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray_b2b2b2" />
    </RelativeLayout>

</layout>