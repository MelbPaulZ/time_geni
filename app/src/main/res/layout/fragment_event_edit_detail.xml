<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <import type="org.unimelb.itime.util.EventUtil"/>
        <import type="org.unimelb.itime.util.TimeSlotUtil"/>
        <import type="android.view.View"/>
        <import type="org.unimelb.itime.ui.viewmodel.EventEditViewModel.PickerTask"/>
        <variable
            name="eventEditVM"
            type="org.unimelb.itime.ui.viewmodel.EventEditViewModel" />
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                <Button
                    android:id="@+id/edit_event_cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:textSize="17dp"
                    android:textColor="@color/page_title_color"
                    android:onClick="@{eventEditVM.cancelEdit()}"
                    android:text="@string/cancel" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/page_title_color"
                    android:text="@string/edit_event" />

                <Button
                    android:id="@+id/edit_event_done_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:textSize="17dp"
                    android:onClick="@{eventEditVM.finishEdit()}"
                    android:textColor="@color/page_title_color"
                    android:text="@string/done" />
            </android.support.v7.widget.Toolbar>
        </LinearLayout>

        <include layout="@layout/event_edit_common_content"
            bind:eventEditVM="@{eventEditVM}"
            />

        <Button
            android:id="@+id/edit_event_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_round_radius_red"
            android:text="@string/delete_event"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:onClick="@{eventEditVM.onClickDelete()}"
            android:textColor="@color/white" />
    </LinearLayout>
</layout>