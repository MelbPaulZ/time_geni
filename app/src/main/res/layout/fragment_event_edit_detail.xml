                        <LinearLayout
                            android:id="@+id/leftLinear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Proposed Timeslots"
                                android:textColor="@color/text_enable"
                                android:textSize="@dimen/page_text_size" />

                            <TextView
                                android:id="@+id/edit_event_proposed_fst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{EventUtil.getSuggestTimeStringFromLong(context, eventEditVM.eventEditViewEvent.timeslots.get(0).startTime, eventEditVM.eventEditViewEvent.timeslots.get(0).endTime)}"
                                android:textColor="@color/text_disable"
                                android:textSize="@dimen/page_text_size" />

                            <TextView
                                android:id="@+id/edit_event_proposed_snd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
