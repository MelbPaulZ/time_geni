<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <import type="org.unimelb.itime.util.EventUtil"/>
        <import type="org.unimelb.itime.util.TimeSlotUtil"/>
        <import type="android.view.View"/>
        <variable
            name="eventEditVM"
            type="org.unimelb.itime.ui.viewmodel.EventEditViewModel" />
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                <Button
                    android:id="@+id/edit_event_cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:textSize="17dp"
                    android:textColor="@color/page_title_color"
                    android:onClick="@{eventEditVM.cancelEdit()}"
                    android:text="@string/cancel" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/page_title_color"
                    android:text="@string/edit_event" />

                <Button
                    android:id="@+id/edit_event_done_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:textSize="17dp"
                    android:onClick="@{eventEditVM.finishEdit()}"
                    android:textColor="@color/page_title_color"
                    android:text="@string/done" />
            </android.support.v7.widget.Toolbar>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbarStyle="insideOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_new_event_edit"
                android:orientation="vertical">

                <!--blank for border-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/page_blank_row_height" />
                <!-- end -->
                <LinearLayout
                    android:id="@+id/part_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="0dp">
                    <!--Tittle Row-->
                    <EditText
                        android:id="@+id/edit_event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:textColor="@color/text_enable"
                        android:text="@={eventEditVM.eventEditViewEvent.title}"
                        android:textSize="@dimen/page_text_size" />

                    <!--Fst Row-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:onClick="@{eventEditVM.changeLocation()}"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textColor="@color/text_enable"
                            android:textSize="@dimen/page_text_size" />

                        <TextView
                            android:id="@+id/edit_event_location_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@{eventEditVM.eventEditViewEvent.location?? @string/no_location}"
                            android:textColor="@color/text_disable"
                            android:textSize="@dimen/page_text_size" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:onClick="@{eventEditVM.chooseRepeat()}"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/repeat"
                            android:layout_centerVertical="true"
                            android:textColor="@color/text_enable"
                            android:textSize="@dimen/page_text_size" />

                        <TextView
                            android:id="@+id/edit_event_repeat_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/edit_event_repeat_arrow"
                            android:layout_marginRight="@dimen/padding_10"
                            android:text="@{EventUtil.parseRepeatIdToRepeat(context, eventEditVM.eventEditViewEvent.recurrence,eventEditVM.eventEditViewEvent.startTime)}"
                            android:textColor="@color/text_disable"
                            android:textSize="@dimen/page_text_size" />
                        <ImageView
                            android:id="@+id/edit_event_repeat_arrow"
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/icon_general_arrow_right"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:onClick="@{eventEditVM.toInviteePicker()}"
                        android:visibility="@{(eventEditVM.eventEditViewEvent.hasAttendee() &amp;&amp; eventEditVM.eventEditViewEvent.invitee.size()>0)? View.VISIBLE : View.GONE}"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/invitee"
                            android:textColor="@color/text_enable"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/page_text_size" />

                        <TextView
                            android:id="@+id/edit_event_attendee_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@{EventUtil.getAttendeeString(context, EventUtil.fromInviteeListToArraylist(eventEditVM.eventEditViewEvent.invitee))}"
                            android:textColor="@color/text_disable"
                            android:layout_toLeftOf="@+id/edit_event_attendee_arrow"
                            android:layout_marginRight="@dimen/padding_10"
                            android:textSize="@dimen/page_text_size" />

                        <ImageView
                            android:id="@+id/edit_event_attendee_arrow"
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_general_arrow_right" />
                    </RelativeLayout>

                    <!--Proposed time slot-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{eventEditVM.editTimeSlot()}"
                        android:visibility="@{eventEditVM.eventEditViewEvent.hasAttendee() &amp;&amp; eventEditVM.eventEditViewEvent.invitee.size()>0? View.VISIBLE:View.GONE}"
                        android:background="@drawable/table_row_border">

                        <LinearLayout
                            android:id="@+id/leftLinear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:onClick="@{eventEditVM.editTimeSlot()}"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Proposed Timeslots"
                                android:onClick="@{eventEditVM.editTimeSlot()}"
                                android:textColor="@color/text_enable"
                                android:textSize="@dimen/page_text_size" />

                            <org.unimelb.itime.widget.NonScrollListView
                                android:id="@+id/event_edit_listview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:divider="#00000000">
                            </org.unimelb.itime.widget.NonScrollListView>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:onClick="@{eventEditVM.editTimeSlot()}">
                            <ImageView
                                android:id="@+id/edit_event_select_time_image_view"
                                android:layout_width="10dp"
                                android:layout_height="15dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/icon_general_arrow_right" />

                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    />
                <!-- end -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/table_row_border"
                        android:onClick="@{eventEditVM.onChooseAlertTime()}">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:text="@string/alert_time"
                            android:textColor="@color/text_enable"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:id="@+id/edit_event_alert_time_arrow"
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_general_arrow_right" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:onClick="@{eventEditVM.onChooseCalendarType()}"
                        android:background="@drawable/table_row_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:text="@string/calendar_type"
                            android:textColor="@color/text_enable"
                            android:layout_centerVertical="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/event_edit_calendarType_arrow"
                            android:layout_marginRight="@dimen/padding_10"
                            android:text="@{EventUtil.getCalendarTypeFromIndex(context,eventEditVM.eventEditViewEvent.calendarUid)}"/>
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />
                        <ImageView
                            android:id="@+id/event_edit_calendarType_arrow"
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_general_arrow_right"/>
                    </RelativeLayout>
                </LinearLayout>
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_row_border"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border">

                        <EditText
                            android:id="@+id/edit_event_url"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/url"
                            android:text="@={eventEditVM.eventEditViewEvent.url}"
                            android:background="#00000000"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/page_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edit_event_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/description"
                            android:text="@={eventEditVM.eventEditViewEvent.description}"
                            android:textColor="@color/text_enable"
                            android:background="#00000000"
                            android:textSize="@dimen/page_text_size" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{eventEditVM.pickPhoto()}"
                        android:background="@drawable/table_row_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/page_text_size"
                            android:textColor="@color/text_enable"
                            android:text="@string/photo"
                            android:layout_alignParentLeft="true"/>
                        <HorizontalScrollView
                            android:id="@+id/edit_photoList"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/edit_event_photo_arrow"
                            android:layout_marginLeft="@dimen/padding_10"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/edit_photo1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginRight="@dimen/padding_10"
                                    imageResource="@{eventEditVM.eventEditViewEvent}" />

                                <ImageView
                                    android:id="@+id/edit_photo2"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginRight="@dimen/padding_10"
                                    imageResource="@{eventEditVM.eventEditViewEvent}" />

                                <ImageView
                                    android:id="@+id/edit_photo3"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    imageResource="@{eventEditVM.eventEditViewEvent}" />
                            </LinearLayout>
                        </HorizontalScrollView>
                        <ImageView
                            android:id="@+id/edit_event_photo_arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/edit_event_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_round_radius_red"
            android:text="@string/delete_event"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:textColor="@color/white" />
    </LinearLayout>
</layout>