<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="eventEditVM"
            type="org.unimelb.itime.ui.viewmodel.EventEditViewModel" />
        <variable
            name="toolbarVM"
            type="org.unimelb.itime.ui.viewmodel.ToolbarViewModel"/>

        <import type="org.unimelb.itime.util.EventUtil" />

        <import type="org.unimelb.itime.util.TimeSlotUtil" />

        <import type="android.view.View" />

        <import type="org.unimelb.itime.util.CalendarUtil" />

        <import type="me.tatarka.bindingcollectionadapter.LayoutManagers" />
        <import type="android.support.v7.widget.LinearLayoutManager" />

        <import type="org.unimelb.itime.ui.viewmodel.EventCommonViewModel.PickerTask" />
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/toolbar_common"
            bind:vm="@{toolbarVM}"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onTouch="@{eventEditVM.onScrollViewTouch}"
            android:scrollbarStyle="insideOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_new_event_edit"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <!--blank for border-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/page_blank_row_height" />

                <!--title-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    >
                    <EditText
                        android:id="@+id/edit_event_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:background="@null"
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="5dp"
                        android:onFocusChange="@{eventEditVM.onEditFocusChange}"
                        android:hint="@string/new_event"
                        android:text="@={eventEditVM.event.title}"
                        android:textColor="@color/cell_name"
                        android:textSize="@dimen/page_text_size" />

                    <TextView style="@style/itime_bottom_divider_line" />
                </RelativeLayout>

                <!--location-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    android:onClick="@{eventEditVM.changeLocation()}">
                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/location"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:text="@{eventEditVM.event.location?? @string/no_location}"
                        android:textColor="@color/cell_value"
                        android:textSize="@dimen/page_text_size" />

                    <TextView style="@style/itime_bottom_divider_line" />
                </RelativeLayout>


                <!--Repeat-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    android:onClick="@{eventEditVM.chooseRepeat()}">
                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/repeat"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="@{eventEditVM.getRepeatString(eventEditVM.event)}"
                        android:textColor="@color/cell_value"
                        android:textSize="@dimen/page_text_size" />

                    <TextView
                        style="@style/arrow_disclosure_indicator" />

                    <TextView
                        style="@style/itime_bottom_divider_line" />

                </RelativeLayout>

                <!--end repeat-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    android:onClick="@{eventEditVM.onChangeDate(PickerTask.END_REPEAT)}"
                    android:visibility="@{EventUtil.isEventRepeat(eventEditVM.event) ? View.VISIBLE : View.GONE}">

                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/end_repeat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="@{EventUtil.getRepeatEndString(context, eventEditVM.event)}"
                        android:textColor="@color/cell_value"
                        android:textSize="@dimen/page_text_size" />

                    <TextView
                        style="@style/arrow_disclosure_indicator" />

                    <TextView
                        style="@style/itime_bottom_divider_line"/>
                </RelativeLayout>

                <!--invitee-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    android:onClick="@{eventEditVM.toInviteePicker()}">
                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/invitee"
                        />

                    <LinearLayout
                        android:id="@+id/create_event_attendee_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/invitee_1"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:padding="2dp"
                            app:index="@{0}"
                            app:urls="@{eventEditVM.event.invitee}" />

                        <ImageView
                            android:id="@+id/invitee_2"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:padding="2dp"
                            app:index="@{1}"
                            app:urls="@{eventEditVM.event.invitee}" />

                        <ImageView
                            android:id="@+id/invitee_3"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:padding="2dp"
                            app:index="@{2}"
                            app:urls="@{eventEditVM.event.invitee}" />
                    </LinearLayout>


                    <TextView
                        style="@style/arrow_disclosure_indicator" />
                    <TextView
                        style="@style/itime_bottom_divider_line" />

                </RelativeLayout>

                <!--proposed timeslot-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:background="@color/white"
                    android:onClick="@{eventEditVM.editTimeSlot()}"
                    app:timeslotVisible="@{eventEditVM.event}">

                    <LinearLayout
                        android:id="@+id/leftLinear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="5dp"
                        android:onClick="@{eventEditVM.editTimeSlot()}"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:onClick="@{eventEditVM.editTimeSlot()}"
                            android:text="@string/event_proposed_timeslots"
                            android:textColor="@color/text_enable"
                            android:textSize="@dimen/page_text_size" />

                        <org.unimelb.itime.widget.NonScrollListView
                            android:id="@+id/event_edit_listview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:divider="#00000000"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            app:itemView="@{eventEditVM.itemView}"
                            app:items="@{eventEditVM.timeslotList}" />

                    </LinearLayout>

                    <TextView
                        style="@style/arrow_disclosure_indicator" />

                    <!--this is for expand click area-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:onClick="@{eventEditVM.editTimeSlot()}"/>

                    <TextView
                        style="@style/itime_bottom_divider_line"/>

                </RelativeLayout>


                <!--invitee see each other-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    android:visibility="@{EventUtil.hasOtherInviteeExceptSelf(context, eventEditVM.event)? View.VISIBLE : View.GONE}">
                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/allow_invitee_to_see_each_other"/>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="14dp"
                        android:checked="@{eventEditVM.event.inviteeVisibility == 1? true : false}"
                        android:onCheckChange="@{eventEditVM.inviteeVisibilityChange()}"
                        />

                </RelativeLayout>

                <!--for gray blank space-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />


                <!--all day-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    android:visibility="@{EventUtil.hasOtherInviteeExceptSelf(context, eventEditVM.event)? View.GONE: View.VISIBLE}">

                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/all_day" />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="14dp"
                        android:layout_centerVertical="true"
                        android:checked="@{EventUtil.isAllDayEvent(eventEditVM.event)}"
                        android:onCheckChange="@{eventEditVM.eventAlldayChange()}" />

                    <TextView
                        style="@style/itime_bottom_divider_line" />
                </RelativeLayout>

                <!--start time-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    android:visibility="@{eventEditVM.startTimeVisibility}">
                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/event_starts" />

                    <!--date part-->
                    <TextView
                        style="@style/itime_select_date_16sp"
                        android:layout_marginEnd="15dp"
                        android:layout_toStartOf="@+id/create_event_start_time"
                        android:onClick="@{eventEditVM.onChangeDate(PickerTask.START_TIME)}"
                        android:text="@{EventUtil.getSelectDateStringFromLong(context, eventEditVM.event.startTime)}" />
                    <!--time part-->
                    <TextView
                        android:id="@+id/create_event_start_time"
                        style="@style/itime_select_time_16sp"
                        android:enabled="@{eventEditVM.isAlldayEvent ==1 ? false: true}"
                        android:onClick="@{eventEditVM.onChangeTime(PickerTask.START_TIME)}"
                        android:text="@{EventUtil.getSelectTimeStringFromLong(context, eventEditVM.event.startTime)}"
                        android:textColor="@color/text_enable"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="14dp"
                        />

                    <TextView
                        style="@style/itime_bottom_divider_line" />
                </RelativeLayout>

                <!--end time-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    android:visibility="@{eventEditVM.endTimeVisibility}">

                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/event_ends" />

                    <TextView
                        style="@style/itime_select_date_16sp"
                        android:layout_marginEnd="15dp"
                        android:layout_toStartOf="@+id/create_event_end_time"
                        android:onClick="@{eventEditVM.onChangeDate(PickerTask.END_TIME)}"
                        android:text="@{EventUtil.getSelectDateStringFromLong(context, eventEditVM.event.endTime)}" />
                    <TextView
                        android:id="@+id/create_event_end_time"
                        style="@style/itime_select_time_16sp"
                        android:enabled="@{eventEditVM.isAlldayEvent ==1 ? false: true}"
                        android:onClick="@{eventEditVM.onChangeTime(PickerTask.END_TIME)}"
                        android:text="@{EventUtil.getSelectTimeStringFromLong(context, eventEditVM.event.endTime)}"
                        android:textColor="@color/text_enable"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="14dp"
                        />

                    <TextView
                        style="@style/itime_bottom_divider_line" />

                </RelativeLayout>

                <!--alert time-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    android:onClick="@{eventEditVM.onChooseAlertTime()}">

                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/alert_time"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{eventEditVM.alertString}"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        />

                    <TextView
                        style="@style/arrow_disclosure_indicator" />

                    <TextView
                        style="@style/itime_bottom_divider_line" />
                </RelativeLayout>

                <!--calendar type-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    android:onClick="@{eventEditVM.onChooseCalendarType()}">

                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/calendar"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="30dp"
                        android:layout_alignParentEnd="true"
                        android:text="@{CalendarUtil.getInstance(context).getCalendarName(eventEditVM.event)}"
                        android:textSize="17dp" />

                    <TextView style="@style/itime_bottom_divider_line" />
                </RelativeLayout>

                <!--gray blank space-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />


                <!--photo-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    android:onClick="@{eventEditVM.pickPhoto()}">

                    <TextView
                        style="@style/itime_blacktitle_17sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/photo" />

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:minWidth="200dp"
                        android:layout_gravity="center_vertical"
                        app:layoutManager="@{LayoutManagers.linear(LinearLayoutManager.HORIZONTAL, true)}"
                        app:items="@{eventEditVM.photoUrls}"
                        app:itemView="@{eventEditVM.photoItemView}"
                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:onClick="@{eventEditVM.pickPhoto()}"/>

                    <TextView
                        style="@style/arrow_disclosure_indicator" />

                    <TextView style="@style/itime_bottom_divider_line" />

                </RelativeLayout>


                <!--url-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    >

                    <EditText
                        android:id="@+id/edit_event_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:layout_marginLeft="5dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="@string/url"
                        android:layout_centerVertical="true"
                        android:onFocusChange="@{eventEditVM.onEditFocusChange}"
                        android:text="@={eventEditVM.event.url}"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/page_text_size" />

                    <TextView
                        style="@style/itime_bottom_divider_line" />
                </RelativeLayout>

                <!--note-->
                <RelativeLayout
                    style="@style/itime_cell_relative_layout"
                    >

                    <EditText
                        android:id="@+id/edit_event_note"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:hint="@string/description"
                        android:onFocusChange="@{eventEditVM.onEditFocusChange}"
                        android:text="@={eventEditVM.event.description}"
                        android:textColor="@color/text_enable"
                        android:textSize="@dimen/page_text_size" />

                    <TextView
                        style="@style/itime_bottom_divider_line" />
                </RelativeLayout>

                </LinearLayout>
        </ScrollView>


        <TextView
            android:visibility="@{eventEditVM.deleteBtnVisibility()}"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/background_top_bottom_divider"
            android:text="@string/delete_event"
            android:textColor="@color/color_F45B69"
            android:textSize="17sp"
            android:onClick="@{eventEditVM.onClickDelete()}"
            android:textAlignment="center"
            android:gravity="center"
            />
    </LinearLayout>
</layout>