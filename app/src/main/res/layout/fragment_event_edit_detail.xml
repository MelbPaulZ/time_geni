                    android:paddingTop="0dp">
                    <!--Tittle Row-->
                    <EditText
                        android:id="@+id/edit_event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:textColor="@color/text_enable"
                        android:text="@={eventEditVM.eventEditViewEvent.title}"
                        android:textSize="@dimen/page_text_size" />

                    <!--Fst Row-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textColor="@color/text_enable"
                            android:textSize="@dimen/page_text_size" />

                        <TextView
                            android:id="@+id/edit_event_location_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="@{eventEditVM.eventEditViewEvent.locationAddress?? @string/no_location}"
                            android:textColor="@color/text_disable"
                            android:textSize="@dimen/page_text_size" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/repeat"
                            android:layout_centerVertical="true"
                            android:textColor="@color/text_enable"
                            android:textSize="@dimen/page_text_size" />

                        <TextView
                            android:id="@+id/edit_event_repeat_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/edit_event_repeat_arrow"
                            android:layout_marginRight="@dimen/padding_10"
                            android:text="@{EventUtil.parseRepeatIdToRepeat(context, eventEditVM.eventEditViewEvent.repeatTypeId,eventEditVM.eventEditViewEvent.startTime)}"
                            android:textColor="@color/text_disable"
                            android:textSize="@dimen/page_text_size" />
                        <ImageView
                            android:id="@+id/edit_event_repeat_arrow"
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/icon_general_arrow_right"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/invitee"
                            android:textColor="@color/text_enable"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/page_text_size" />

                        <TextView
                            android:id="@+id/edit_event_attendee_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@{EventUtil.getAttendeeString(context, EventUtil.fromInviteeListToArraylist(eventEditVM.eventEditViewEvent.invitee))}"
                            android:textColor="@color/text_disable"
                            android:layout_toLeftOf="@+id/edit_event_attendee_arrow"
                            android:layout_marginRight="@dimen/padding_10"
                            android:textSize="@dimen/page_text_size" />

                        <ImageView
