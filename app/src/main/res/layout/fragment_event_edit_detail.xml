                <!--blank for border-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    />
                <!-- end -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/table_row_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:text="@string/alert_time"
                            android:textColor="@color/text_enable"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:id="@+id/edit_event_alert_time_arrow"
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_general_arrow_right" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/table_row_border">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:text="@string/calendar_type"
                            android:textColor="@color/text_enable"
                            android:layout_centerVertical="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/event_edit_calendarType_arrow"
                            android:layout_marginRight="@dimen/padding_10"
                            android:text="@{eventEditVM.eventEditViewEvent.calendarTypeId}"/>
                        <ImageView
                            android:id="@+id/event_edit_calendarType_arrow"
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_general_arrow_right"/>
                    </RelativeLayout>
                </LinearLayout>
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_row_border"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border">

                        <EditText
                            android:id="@+id/edit_event_url"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/url"
                            android:text="@={eventEditVM.eventEditViewEvent.url}"
                            android:background="#00000000"
                            android:textColor="@color/text_disable"
                            android:textSize="@dimen/page_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_row_border"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edit_event_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/note"
                            android:text="@={eventEditVM.eventEditViewEvent.note}"
                            android:textColor="@color/text_disable"
                            android:background="#00000000"
                            android:textSize="@dimen/page_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/edit_event_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_round_radius_red"
            android:text="@string/delete_event"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:textColor="@color/white" />
