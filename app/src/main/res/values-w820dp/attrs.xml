<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InviteeGroupView">
        <attr name="avatarHeight" format="dimension"/>
        <attr name="avatarWeight" format="dimension"/>
        <attr name="squareHeight" format="dimension"/>
        <attr name="emailColor" format="color"/>
        <attr name="phoneColor" format="color"/>
        <attr name="hintText" format="string"/>
        <attr name="inviteeList" format="reference"/>
        <attr name="onInviteeClickListener" format="reference"/>
        <attr name="onEditListener" format="reference"/>
        <attr name="onAddClickListener" format="reference"/>
        <attr name="addable" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="BaseTitleBar">
        <attr name="title" format = "string"/>
        <attr name="showRight" format="boolean"/>
        <attr name="showLeft" format="boolean"/>
        <attr name="backOnClickListener" format="reference"/>
        <attr name="rightOnClickListener" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SortListView">
        <attr name="showSideBar" format = "boolean"/>
        <attr name="items" format="reference"/>
        <attr name="itemView" format="reference"/>
        <attr name="onItemClickListener" format="reference"/>
    </declare-styleable>

    <declare-styleable name="WideArrowButton">
        <attr name="text" format = "string"/>
        <attr name="image" format="reference"/>
        <attr name="imageWidth" format="dimension"/>
        <attr name="imageHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="SearchBar">
        <attr name="showSearchButton" format="boolean"/>
        <attr name="cancelListener" format="reference"/>
        <attr name="searchListener" format="reference"/>
        <attr name="inputText" format="string" />
        <attr name="searchHintText" format="string" />
        <attr name="searchHintTitle" format="string" />
        <attr name="searchBackGroundColor" format="color" />
        <attr name="searchHintTextColor" format="color" />
        <attr name="searchTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PhotoGridView">
        <attr name="photos" format="reference"/>
        <attr name="editable" format="boolean"/>
        <attr name="itemOnClickListener" format="reference"/>
        <attr name="addMoreOnClickListener" format="reference"/>
        <attr name="spacing" format="dimension"/>
        <attr name="maxnum" format="integer"/>
    </declare-styleable>
</resources>